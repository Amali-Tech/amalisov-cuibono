{
  "name": "cuibono",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/eslint-plugin-cds": "^3.0.5",
    "@sap/xssec": "^4",
    "cds-routing-handlers": "^3.0.7",
    "express": "^4",
    "reflect-metadata": "^0.2.2",
    "run-s": "^0.0.0",
    "ts-node": "^10.9.2",
    "typedi": "^0.10.0",
    "@sap/cds-dk": "^8",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@cap-js/cds-typer": "^0.26.0",
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.11.1",
    "cds-plugin-ui5": "^0.9.3",
    "eslint": "^8.57.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "rimraf": "^5.0.5",
    "typescript-eslint": "^8.7.0"
  },
  "scripts": {
    "start": "cds-ts serve",
    "watch": "npx cds-ts watch --with-mocks --profile development",
    "watch:fe": "cds-ts watch --open amalisov.cuibono/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy cuibono --delete-services --delete-service-keys --delete-service-brokers",
    "gen-types": "npx @cap-js/cds-typer \"*\" --outputDirectory @cds-models",
    "build-mta": "mbt build -t gen --mtar mta.tar",
    "build:cf": "npm run build:cds && npm run cleanup:ts && npm run build:ts",
    "build:ts": "npx tsc",
    "build:cds": "cds build --production",
    "cleanup:ts": "npx rimraf -v -g gen/srv/srv/**/*.ts",
    "deploy": "npm run build-mta && cf deploy gen/mta.tar --delete-services --abort-on-error && npm i",
    "prepare": "husky .husky",
    "precommit": "eslint ."
  },
  "cds": {
    "requires": {
      "auth": {
        "kind": "basic-auth",
        "users": {
          "ADMIN": {
            "password": "ADMIN1234"
          }
        }
      },
      "connectivity": true,
      "destinations": true,
      "html5-repo": true
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "imports": {
    "#cds-models": "./@cds-models/*/index.js"
  },
  "workspaces": [
    "app/*"
  ],
  "eslintConfig": {
    "extends": "plugin:@sap/cds/recommended"
  }
}
