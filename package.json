{
  "name": "cuibono",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "express": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "cds-plugin-ui5": "^0.9.3",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-ts serve",
    "watch": "npx cds-ts watch --with-mocks --profile development",
    "watch:fe": "cds-ts watch --open amalisov.cuibono/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy cuibono --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "auth": "basic",
      "connectivity": true,
      "destinations": true,
      "html5-repo": true
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "workspaces": [
    "app/*"
  ]
}
