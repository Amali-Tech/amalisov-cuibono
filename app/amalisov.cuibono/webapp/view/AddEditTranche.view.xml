<mvc:View
    controllerName="amalisov.cuibono.controller.AddEditTranche"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout.form"
>
    <m:Page id="addpage">
        <m:customHeader>
            <core:Fragment
                id="custombar"
                fragmentName="amalisov.cuibono.view.CustomBar"
                type="XML"
            />
        </m:customHeader>
        <m:IconTabBar
            id="IconTabBarNoIcons"
            select="onTabSelect"
        >
            <m:items>
                <m:IconTabFilter
                    text="{i18n>bonusTranches}"
                    key="bonusTranches"
                />
                <m:IconTabFilter
                    text="{i18n>participants}"
                    key="participants"
                />
            </m:items>
        </m:IconTabBar>
        <layout:SimpleForm
            class="table"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="12"
            labelSpanM="12"
            labelSpanS="12"
            columnsL="2"
            columnsM="2"
            width="33%"
        >
            <layout:content>
                <m:VBox>
                    <m:FlexBox
                        width="48%"
                        alignItems="Center"
                    >
                        <m:Label text="{i18n>status}:" />
                        <m:Label
                            id="trancheStatus"
                            text="{trancheData>/status}"
                            class="customInputs"
                        />
                    </m:FlexBox>
                    <m:FlexBox
                        class="spaceAbove"
                        justifyContent="SpaceBetween"
                    >
                        <m:VBox width="48%">
                            <m:Label text="{i18n>name}" />
                            <m:Input
                                id="trancheName"
                                value="{trancheData>/name}"
                                class="customInputs "
                                required="true"
                            />
                        </m:VBox>

                        <m:VBox width="48%">
                            <m:Label text="{i18n>location}" />
                            <m:ComboBox
                                id="trancheLocation"
                                m:items="{
                                    path: 'trancheModel>/Location'
                                }"
                                class="customInputs"
                                selectedKey="{trancheData>/Location_ID}"
                                required="true"
                            >
                                <core:Item
                                    key="{trancheModel>ID}"
                                    text="{trancheModel>name}"
                                />
                            </m:ComboBox>
                        </m:VBox>
                    </m:FlexBox>

                    <m:VBox class="spaceAbove">
                        <m:Label text="{i18n>description}" />
                        <m:TextArea
                            id="trancheDescription"
                            value="{trancheData>/description}"
                            rows="4"
                            class="customInput"
                        />
                    </m:VBox>

                    <m:FlexBox
                        class="spaceAbove"
                        justifyContent="SpaceBetween"
                    >
                        <m:VBox width="48%">
                            <m:Label text="{i18n>startDate}" />
                            <m:DatePicker
                                id="beginDate"
                                value="{path:'trancheData>/beginDate',formatter:'.formatter.formatDate'}"
                                class="customInput"
                                required="true"
                                minDate=""
                            />
                        </m:VBox>
                        <m:VBox width="48%">
                            <m:Label text="{i18n>endDate}" />
                            <m:DatePicker
                                id="endDate"
                                value="{path:'trancheData>/endDate',formatter:'.formatter.formatDate'}"
                                class="customInput"
                                required="true"
                            />
                        </m:VBox>
                    </m:FlexBox>

                    <m:FlexBox
                        class="spaceAbove"
                        justifyContent="SpaceBetween"
                    >
                        <m:VBox width="48%">
                            <m:Label text="{i18n>trancheWeight}" />
                            <m:Input
                                id="trancheWeight"
                                value="{trancheData>/trancheWeight}"
                                class="customInput"
                                required="true"
                            />
                        </m:VBox>
                        <m:VBox width="48%">
                            <m:Label text="{i18n>originDate}" />
                            <m:DatePicker
                                id="trancheOriginDate"
                                value="{path:'trancheData>/dateOfOrigin',formatter:'.formatter.formatDate'}"
                                class="customInput"
                                required="true"
                            />
                        </m:VBox>
                    </m:FlexBox>
                </m:VBox>
            </layout:content>
        </layout:SimpleForm>

        <m:Table
            id="targetTable"
            m:items="{path: 'trancheData>/Target'}"
            width="33%"
        >
            <m:headerToolbar>
                <m:OverflowToolbar class="tableBar">
                    <m:Title
                        text="{i18n>targetWeight}"
                        level="H2"
                    />
                    <m:ToolbarSpacer />
                    <m:Button
                        type="Emphasized"
                        text="{i18n>addNewTarget}"
                        press="onAddTarget"
                    />
                </m:OverflowToolbar>
            </m:headerToolbar>
            <m:columns>
                <m:Column>
                    <m:Text text="{i18n>name}" />
                </m:Column>
                <m:Column>
                    <m:Text text="{i18n>targetWeight}" />
                </m:Column>
                <m:Column hAlign="End">
                    <m:Text text="{i18n>achievements}" />
                </m:Column>
                <m:Column>
                    <m:Text text="" />
                </m:Column>
            </m:columns>
            <m:items>
                <m:ColumnListItem>
                    <m:cells>
                        <m:Text text="{trancheData>name}" />
                        <m:Text text="{trancheData>weight}" />
                        <m:Text text="{trancheData>achievement}" />

                        <m:HBox class="trancheButtonBox">
                            <m:Button
                                type="Unstyled"
                                icon="sap-icon://edit"
                                press="onEditTargetPress"
                                class="editButton"
                            />

                            <m:Button
                                type="Unstyled"
                                icon="sap-icon://delete"
                                press="onDeleteTargetPress"
                                class="deleteButton"
                            />
                        </m:HBox>
                    </m:cells>
                </m:ColumnListItem>
            </m:items>
        </m:Table>

        <m:VBox class="totalTrancheWeight sapUiLargeMarginBottom">
            <m:HBox class="totalBox">
                <m:Title
                    text="{i18n>total}"
                    class="totalTitle"
                />

                <m:ToolbarSpacer />
                <m:Text
                    text="{trancheData>/totalWeight}"
                    class="totalTrancheWeightText"
                />

                <m:ToolbarSpacer />
            </m:HBox>
        </m:VBox>
        <m:FlexBox
            class="customBtn1"
            width="99%"
            justifyContent="End"
        >
            <m:Button
                type="Emphasized"
                text="{i18n>save}"
                press="onSavePress"
            />
            <m:Button
                type="Default"
                text="{i18n>discard}"
                press=".onNavBack"
            />

            <m:Button
                type="Ghost"
                text="{i18n>lock}"
                icon="sap-icon://locked"
                visible="{= ${trancheData>/status}==='Running'?true:false}"
            />
            <m:Button
                type="Accept"
                text="{i18n>completed}"
                icon="sap-icon://complete"
                press=".onCompleteTranche"
                visible="{= ${trancheData>/status}==='Locked'?true:false}"
            />
            <m:Button
                type="Ghost"
                text="{i18n>reopen}"
                icon="sap-icon://unlocked"
                press=".onReOpenTranche"
                visible="{= ${trancheData>/status}==='Locked'?true:false}"
            />
        </m:FlexBox>
    </m:Page>
</mvc:View>
