<mvc:View
    controllerName="amalisov.cuibono.controller.AddEditTranche"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout.form"
>
    <m:Page>
        <m:customHeader>
            <core:Fragment
                fragmentName="amalisov.cuibono.view.CustomBar"
                type="XML"
            />
        </m:customHeader>
        <m:IconTabBar
            id="IconTabBarNoIcons"
            select="onTabSelect"
        >
            <m:items>
                <m:IconTabFilter
                    text="{i18n>bonusTranches}"
                    key="bonusTranches"
                />
                <m:IconTabFilter
                    text="{i18n>participants}"
                    key="participants"
                />
            </m:items>
        </m:IconTabBar>
        <m:VBox>
            <m:Title
                text="{= ${currentView>/currentView}==='edit'? 'Edit':'Create'} Bonus Tranche"
                class="bonusTitle"
            />
            <m:IconTabBar>
                <m:items>
                    <m:IconTabFilter
                        text="{i18n>details}"
                        key="bonusTranche"
                    />
                </m:items>
            </m:IconTabBar>
        </m:VBox>
        <m:VBox
            width="33%"
            class="sapUiTinyMarginBegin"
        >
            <layout:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                width="100%"
            >
                <layout:content>
                    <m:VBox>
                        <m:FlexBox
                            width="48%"
                            alignItems="Center"
                        >
                            <m:Label text="{i18n>status}:" />
                            <m:Label
                                id="trancheStatus"
                                text="{trancheData>/status}"
                                class="customInputs"
                            />
                        </m:FlexBox>
                        <m:FlexBox
                            class="sapUiMediumMarginTop"
                            justifyContent="SpaceBetween"
                        >
                            <m:VBox width="48%">
                                <m:Label text="{i18n>name}" />
                                <m:Input
                                    id="trancheName"
                                    value="{trancheData>/name}"
                                    class="customInputs "
                                    required="true"
                                />
                            </m:VBox>

                            <m:VBox width="48%">
                                <m:Label
                                    text="{i18n>location}"
                                    required="true"
                                />
                                <m:ComboBox
                                    id="trancheLocation"
                                    items="{
                                    path: 'trancheModel>/Location'
                                }"
                                    class="customInputs"
                                    selectedKey="{trancheData>/Location_ID}"
                                    required="true"
                                >
                                    <core:Item
                                        key="{trancheModel>ID}"
                                        text="{trancheModel>name}"
                                    />
                                </m:ComboBox>
                            </m:VBox>
                        </m:FlexBox>

                        <m:VBox class="spaceAbove">
                            <m:Label text="{i18n>description}" />
                            <m:TextArea
                                id="trancheDescription"
                                value="{trancheData>/description}"
                                rows="4"
                                class="customInput"
                            />
                        </m:VBox>

                        <m:FlexBox
                            class="spaceAbove"
                            justifyContent="SpaceBetween"
                        >
                            <m:VBox width="48%">
                                <m:Label
                                    text="{i18n>startDate}"
                                    required="true"
                                />
                                <m:DatePicker
                                    id="beginDate"
                                    minDate="{trancheData>/currentDate}"
                                    value="{trancheData>/beginDate}"
                                    class="customInput"
                                    required="true"
                                    change="onStartDateChange"
                                    liveChange="onStartDateInput"
                                />
                            </m:VBox>
                            <m:VBox width="48%">
                                <m:Label
                                    text="{i18n>endDate}"
                                    required="true"
                                />
                                <m:DatePicker
                                    id="endDate"
                                    value="{trancheData>/endDate}"
                                    class="customInput"
                                    required="true"
                                    change="onEndDateChange"
                                    liveChange="onEndDateInput"
                                />
                            </m:VBox>
                        </m:FlexBox>

                        <m:FlexBox
                            class="spaceAbove"
                            justifyContent="SpaceBetween"
                        >
                            <m:VBox width="48%">
                                <m:Label text="{i18n>trancheWeight}" />
                                <m:Input
                                    id="trancheWeight"
                                    value="{trancheData>/trancheWeight}"
                                    class="customInput"
                                    required="true"
                                />
                            </m:VBox>
                            <m:VBox width="48%">
                                <m:Label text="{i18n>originDate}" />
                                <m:DatePicker
                                    id="trancheOriginDate"
                                    value="{trancheData>/dateOfOrigin}"
                                    class="customInput"
                                    required="true"
                                    change="onOriginDateChange"
                                    liveChange="onOriginDateInput"
                                />
                            </m:VBox>
                        </m:FlexBox>
                    </m:VBox>
                </layout:content>
            </layout:SimpleForm>

            <m:Table
                id="targetTable"
                items="{path: 'trancheData>/Target'}"
            >
                <m:headerToolbar>
                    <m:OverflowToolbar class="tableBar">
                        <m:Title
                            text="{i18n>targetWeight}"
                            level="H2"
                        />
                        <m:ToolbarSpacer />
                        <m:Button
                            type="Emphasized"
                            text="{i18n>addNewTarget}"
                            press="onAddTarget"
                        />
                    </m:OverflowToolbar>
                </m:headerToolbar>
                <m:columns>
                    <m:Column>
                        <m:Text text="{i18n>name}" />
                    </m:Column>
                    <m:Column>
                        <m:Text text="{i18n>targetWeight}" />
                    </m:Column>
                    <m:Column hAlign="End">
                        <m:Text text="{i18n>achievements}" />
                    </m:Column>
                    <m:Column>
                        <m:Text text="" />
                    </m:Column>
                </m:columns>
                <m:items>
                    <m:ColumnListItem>
                        <m:cells>
                            <m:Text text="{trancheData>name}" />
                            <m:Text
                                text="{
                             path: 'trancheData>weight', 
                        formatter: '.formatter.formatPercentage' 
                            }"
                            />
                            <m:Text
                                text="{
                            path: 'trancheData>achievement', 
                        formatter: '.formatter.formatPercentage'
                            }"
                            />

                            <m:HBox class="trancheButtonBox">
                                <m:Button
                                    type="Unstyled"
                                    icon="sap-icon://edit"
                                    press="onEditTargetPress"
                                    class="editButton"
                                />

                                <m:Button
                                    type="Unstyled"
                                    icon="sap-icon://delete"
                                    press="onDeleteTargetPress"
                                    class="deleteButton"
                                />
                            </m:HBox>
                        </m:cells>
                    </m:ColumnListItem>
                </m:items>
            </m:Table>
            <m:VBox class="totalTrancheWeight sapUiLargeMarginBottom">
                <m:HBox class="totalBox">
                    <m:Title
                        text="{i18n>total}"
                        class="totalTitle"
                    />

                    <m:ToolbarSpacer />
                    <m:Text
                        text="{ 
                        path: 'trancheData>/totalWeight', 
                        formatter: '.formatter.formatPercentage' 
                    }"
                        class="{ 
                        path: 'trancheData>/totalWeight', 
                        formatter: '.formatter.formatTextClass'
                    }"
                    />

                    <m:ToolbarSpacer />
                </m:HBox>
            </m:VBox>
        </m:VBox>

        <m:footer>
            <m:OverflowToolbar>
                <m:ToolbarSpacer />
                <m:Button
                    type="Emphasized"
                    text="{i18n>save}"
                    press=".onSavePress"
                    visible="{parts: [{path: 'trancheData>/status'}, {path: 'trancheData>/totalWeight'}], formatter: '.formatter.formatSaveVisibility'}"
                />

                <m:Button
                    type="Ghost"
                    text="{i18n>lock}"
                    icon="sap-icon://locked"
                    press=".onLockTranche"
                    visible="{parts: [{path: 'trancheData>/status'}, {path: 'trancheData>/totalWeight'}], formatter: '.formatter.formatLockedVisibility'}"
                />
                <m:Button
                    type="Accept"
                    text="{i18n>completed}"
                    icon="sap-icon://complete"
                    press=".onCompleteTranche"
                    visible="{parts: [{path: 'trancheData>/status'}, {path: 'trancheData>/totalWeight'}], formatter: '.formatter.formatCompleteVisibility'}"
                />
                <m:Button
                    type="Ghost"
                    text="{i18n>reopen}"
                    icon="sap-icon://unlocked"
                    press=".onReOpenTranche"
                    visible="{parts: [{path: 'trancheData>/status'}, {path: 'trancheData>/totalWeight'}], formatter: '.formatter.formatCompleteVisibility'}"
                />
                <m:Button
                    press=".onDiscardPress"
                    type="Default"
                    text="{i18n>discard}"
                />
            </m:OverflowToolbar>
        </m:footer>
    </m:Page>
</mvc:View>
