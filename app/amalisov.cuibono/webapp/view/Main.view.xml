<mvc:View
    controllerName="amalisov.cuibono.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    height="100%"
>
    <m:Page id="page">
        <m:customHeader>
            <core:Fragment
                id="custombar"
                fragmentName="amalisov.cuibono.view.CustomBar"
                type="XML"
            />
        </m:customHeader>
        <m:IconTabBar
            id="idm:IconTabBarNoIcons"
            select="onTabSelect"
            selectedKey="{view>/tab}"
        >
            <m:items>
                <m:IconTabFilter
                    id="bonusTranchesTab"
                    text="{i18n>bonusTranches}"
                    key="bonusTranches"
                />
                <m:IconTabFilter
                    id="participantsTab"
                    text="{i18n>participants}"
                    key="participants"
                />
            </m:items>
        </m:IconTabBar>

        <m:footer>
            <m:OverflowToolbar
                class="overflowFooter"
                visible="{= ${currentView>/currentView}==='edit' || ${currentView>/currentView}==='create'?true:false}"
            >
                <m:ToolbarSpacer />
                <m:Button
                    type="Emphasized"
                    text="{i18n>save}"
                />
                <m:Button
                    type="Default"
                    text="{i18n>discard}"
                />

                <m:Button
                    type="Ghost"
                    text="{i18n>lock}"
                    icon="sap-icon://locked"
                />
                <m:Button
                    type="Accept"
                    text="{i18n>completed}"
                    icon="sap-icon://complete"
                    press=".onCompleteTranche"
                />
                <m:Button
                    type="Ghost"
                    text="{i18n>reopen}"
                    icon="sap-icon://unlocked"
                    press=".onReOpenTranche"
                />
            </m:OverflowToolbar>
        </m:footer>
    </m:Page>
</mvc:View>
