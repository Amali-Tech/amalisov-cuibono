<core:FragmentDefinition xmlns:m="sap.m" xmlns:core="sap.ui.core">
    <m:ViewSettingsDialog
        class="sapUiResponsiveMargin"
        id="userSorter"
        confirm=".onSortTranche"
        cancel=".onSortCancel"
    >
        <!-- Aggregation for sort items -->
        <m:sortItems>
            <m:ViewSettingsItem
                text="{i18n>name}"
                key="sortName"
                id="sortName"
            />
            <m:ViewSettingsItem
                text="{i18n>location}"
                key="sortLocation"
                id="sortLocation"
            />
            <m:ViewSettingsItem
                text="{i18n>status}"
                key="sortStatus"
                id="sortStatus"
            />
        </m:sortItems>
    </m:ViewSettingsDialog>
</core:FragmentDefinition>
