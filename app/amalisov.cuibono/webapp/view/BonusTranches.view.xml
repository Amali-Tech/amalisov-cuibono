<mvc:View
    controllerName="amalisov.cuibono.controller.BonusTranches"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
      xmlns:m="sap.m"

    xmlns:fb="sap.ui.comp.filterbar"
>
    <f:DynamicPage
        id="dynamicPageId"
        headerExpanded="true"
    >
        <f:header>
            <f:DynamicPageHeader
                id="filterHeader"
                pinnable="true"
            >
                <f:content>
                    <fb:FilterBar
                        id="filterbar2"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search=""
                        dragDropConfig="move"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                id="SearchItem2"
                                name="search"
                                groupName="group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        id="searchHere"
                                        placeholder="Search"
                                        showSearchButton="true"
                                        search="onSearch"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="statusID"
                                name="status"
                                label="{i18n>status}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        id="statusMultiCombo"
                                        name="businessPartner"
                                        class="filtersStyle"
                                        items="{path: 'dropdownModel>/trancheStatus',templateShareable: true}"
                                        selectionChange=".onFilterFieldChange"
                                    >
                                        <core:Item
                                            id="statusItems"
                                            key="{dropdownModel>key}"
                                            text="{dropdownModel>text}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="locationID"
                                name="location"
                                label="{i18n>location}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        id="locationMultiCombo"
                                        name="businessPartner"
                                        class="filtersStyle"
                                        items="{path: 'dropdownModel>/trancheLocation',templateShareable: true}"
                                        selectionChange=".onFilterFieldChange"
                                    >
                                        <core:Item
                                            id="locationItems"
                                            key="{dropdownModel>key}"
                                            text="{dropdownModel>text}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="fiscalYearID"
                                name="fiscal"
                                label="{i18n>fiscal}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        id="fiscalMultiCombo"
                                        name="businessPartner"
                                        items="{path: 'dropdownModel>/fiscalYear',templateShareable: true}"
                                        selectionChange=".onFilterFieldChange"
                                    >
                                        <core:Item
                                            id="filterItems"
                                            key="{dropdownModel>key}"
                                            text="{dropdownModel>text}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                 
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <m:Table id="idTranchesTable" inset="false" items="{ path: 'tranche>/TrancheCollection', sorter: { path: 'Name' } }" class="sapFDynamicPageAlignContent" width="auto">
                <m:headerToolbar>
                    <m:OverflowToolbar>
                        <m:Title text="Products" level="H2"/>
                        <m:ToolbarSpacer/>
                        <m:Button text="Create Tranche" type="Emphasized" press="onCreateTranche"/>
                        <m:OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
                    </m:OverflowToolbar>
                </m:headerToolbar>
                <m:columns>
                    <m:Column width="12em"
                   
                    >
                        <m:Text text="Status"/>
                    </m:Column>
                    <m:Column minScreenWidth="Tablet" demandPopin="true">
                        <m:Text text="Name"/>
                    </m:Column>
                    <m:Column minScreenWidth="Tablet" demandPopin="true">
                        <m:Text text="Locations"/>
                    </m:Column>
                    <m:Column>
                        <m:Text text="Start Date"/>
                    </m:Column>
                    <m:Column>
                        <m:Text text="End Date"/>
                    </m:Column>
                    <m:Column>
                        <m:Text text=""/>
                    </m:Column>
                </m:columns>
                <m:items>
                    <m:ColumnListItem>
                        <m:cells>
                            <m:ObjectIdentifier title="{tranche>Status}" text="{tranche>Status}"/>
                            <m:Text text="{tranche>Name}"/>
                            <m:Text text="{tranche>Location}"/>
                            <m:Text text="{tranche>StartDate}"/>
                            <m:Text text="{tranche>EndDate}"/>
                            <m:HBox class="trancheButtonBox">
                                <m:Button type="Unstyled"  icon="sap-icon://edit" press="onEditPress" class="editButton" />
                                <m:Button type="Unstyled"  icon="sap-icon://duplicate" press="onCopyPress"  class="duplicateButton" />
                                <m:Button type="Unstyled"  icon="sap-icon://delete" press="onDeletePress" class="deleteButton" />
                            </m:HBox>
                        </m:cells>
                    </m:ColumnListItem>
                </m:items>
            </m:Table>
    </f:content >
    </f:DynamicPage>
</mvc:View>
