<mvc:View
    controllerName="amalisov.cuibono.controller.BonusTranches"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <f:DynamicPage
        id="dynamicPageId"
        headerExpanded="true"
    >
        <f:header>
            <f:DynamicPageHeader
                id="filterHeader"
                pinnable="true"
            >
                <f:content>
                    <fb:FilterBar
                        id="filterbar2"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search=""
                        dragDropConfig="move"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                id="SearchItem2"
                                name="search"
                                groupName="group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        id="searchHere"
                                        placeholder="Search"
                                        showSearchButton="true"
                                        search="onSearch"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="statusID"
                                name="status"
                                label="{i18n>status}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        id="statusMultiCombo"
                                        name="businessPartner"
                                        class="filtersStyle"
                                        items="{path: 'dropdownModel>/trancheStatus',templateShareable: true}"
                                        selectionChange=".onFilterFieldChange"
                                    >
                                        <core:Item
                                            id="statusItems"
                                            key="{dropdownModel>key}"
                                            text="{dropdownModel>text}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="locationID"
                                name="location"
                                label="{i18n>location}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        id="locationMultiCombo"
                                        name="businessPartner"
                                        class="filtersStyle"
                                        items="{path: 'dropdownModel>/trancheLocation',templateShareable: true}"
                                        selectionChange=".onFilterFieldChange"
                                    >
                                        <core:Item
                                            id="locationItems"
                                            key="{dropdownModel>key}"
                                            text="{dropdownModel>text}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="fiscalYearID"
                                name="fiscal"
                                label="{i18n>fiscal}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        id="fiscalMultiCombo"
                                        name="businessPartner"
                                        items="{path: 'dropdownModel>/fiscalYear',templateShareable: true}"
                                        selectionChange=".onFilterFieldChange"
                                    >
                                        <core:Item
                                            id="filterItems"
                                            key="{dropdownModel>key}"
                                            text="{dropdownModel>text}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content />
    </f:DynamicPage>
</mvc:View>
